{    
    "name": "Youtube Pause",
    "version": "1.0", 
    "description": "Helping you continue to interact with youtube while it thinks you are away",
    "manifest_version": 3,
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "/images/youtube-pause.png",
      "32": "/images/youtube-pause.png",
      "48": "/images/youtube-pause.png",
      "128": "/images/youtube-pause.png"
    }
}
